}
if (rowCount == 0) {
%>
	<tr bgcolor="<%=bodd?"ivory":"white"%>">
		<TD colspan="6" align="center"><b><font size="2"
			face="Arial, Helvetica, sans-serif">No flu billing items</font></b></TD>
