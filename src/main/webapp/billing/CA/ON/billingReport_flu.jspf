	</tr>

	<%  
			rowCount = rowCount + 1;
			BigDecimal bdFee = new BigDecimal(Double.parseDouble(total)).setScale(2, BigDecimal.ROUND_HALF_UP);
			Total2 = Total2.add(bdFee);
