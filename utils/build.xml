      <pathelement path="${classes_web}/"/>
      <path refid="classpath.path"/>
   </classpath> -->
		</javac>
	</target>

	<target name="mds-jar" depends="mdsfile">

		<jar destfile="${build}/mds-${now}.jar">

			<fileset dir="${mdsfiledir}">

			</fileset>
			<!-- <include name="${classes_web}/oscar/oscarDB/**"/>                
